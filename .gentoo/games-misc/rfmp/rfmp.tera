{%- extends "base.tera" -%}

{% block variables %}
if [[ ${PV} = *9999* ]]; then
    inherit git-r3
    EGIT_REPO_URI="https://github.com/GITHUB_REPOSITORY"
    EGIT_BRANCH="GITHUB_REF"
else
    SRC_URI="https://github.com/GITHUB_REPOSITORY/archive/v${PV}.tar.gz -> ${P}.tar.gz"
    SRC_URI+={%- block src_uri -%}{{ super() }}{%- endblock %}
fi
{% endblock %}
