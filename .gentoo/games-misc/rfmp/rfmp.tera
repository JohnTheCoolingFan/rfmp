{%- extends "base.tera" -%}

{%- block src_uri -%}{% raw -%}"${CARGO_CRATE_URIS}"{%- endraw%}{%- endblock %}

{% block variables %}
if [[ ${PV} = *9999* ]]; then
    inherit git-r3
    EGIT_REPO_URI="https://github.com/GITHUB_REPOSITORY"
    EGIT_BRANCH="GITHUB_REF"
else
    SRC_URI+=' '
    SRC_URI+="https://github.com/GITHUB_REPOSITORY/archive/${PV}.tar.gz -> ${P}.tar.gz"
fi
{% endblock %}
